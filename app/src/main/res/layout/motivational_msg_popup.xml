<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/msg_popup_ins"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/write_msg_icon"
        android:layout_marginLeft="10dp"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:text="@string/motivational_msg_popup_ins"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/text_field"
        android:background="@drawable/msg_popup_text_box"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:layout_below="@+id/msg_popup_ins"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:hint="Motivational Message"
        android:gravity="top"
        android:padding="5dp"
        android:lines="6" />

    <TextView
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        android:layout_below="@id/text_field"
        android:layout_marginLeft="200dp"
        android:textColor="@color/blue"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ok"
        android:layout_below="@id/text_field"
        android:layout_alignLeft="@+id/cancel"
        android:layout_marginLeft="120dp"
        android:textColor="@color/blue"
        android:textSize="18sp"
        android:textStyle="bold"/>

</RelativeLayout>